<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.jbytheway.octranspoalarm">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ListFavouritesActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditFavouriteActivity"
            android:label="@string/title_activity_edit_favourite"
            android:parentActivityName=".ListFavouritesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.jbytheway.octranspoalarm.ListFavouritesActivity" />
        </activity>
    </application>

</manifest>
