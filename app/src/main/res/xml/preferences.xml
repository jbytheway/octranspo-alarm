    <SwitchPreference
        android:key="pref_download_wifi_only"
        android:title="@string/pref_title_download_wifi_only"
        android:summary="@string/pref_description_download_wifi_only"
        android:defaultValue="true" />

    <ListPreference
        android:key="pref_sort_stops_by"
        android:title="@string/pref_title_sort_stops_by"
